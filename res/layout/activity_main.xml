<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background12"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".MainActivity" >
    
    <LinearLayout
		android:gravity="center_horizontal"
	    android:orientation="horizontal"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	    <ImageButton
	        android:id="@+id/receiveActivityButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_gravity="bottom"
	        android:layout_margin="10dp"
	        android:background="@drawable/roundshapebtn"
	        android:contentDescription="@string/hello_world"
	        android:onClick="receiveActivity"
	        android:src="@drawable/downloadtt"
	        android:textColor="#fff" />
	
	    <!--  -->
	
	    <ImageButton
	        android:id="@+id/takePicButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_gravity="bottom"
	        android:layout_margin="10dp"
	        android:background="@drawable/roundshapebtn"
	        android:contentDescription="@string/hello_world"
	        android:onClick="takePic"
	        android:src="@drawable/camt"
	        android:textColor="#fff" />
	
	    <ImageButton
	        android:id="@+id/sendActivityButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_gravity="bottom"
	        android:layout_margin="10dp"
	        android:background="@drawable/roundshapebtn"
	        android:contentDescription="@string/hello_world"
	        android:onClick="sendActivity"
	        android:src="@drawable/foldercamerat"
	        android:textColor="#fff" />
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/FragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
	 
    
    

</LinearLayout>